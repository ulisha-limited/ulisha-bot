generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  lid               String   @unique
  name              String
  number            String
  countryCode       String
  type              String
  mode              String
  about             String?
  commandCount      Int      @default(0)
  quizAnswered      Int      @default(0)
  quizAnsweredWrong Int      @default(0)
  points            Float    @default(0.0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Group {
  id          Int      @id @default(autoincrement())
  gid         String   @unique
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  lid       String
  content   String
  type      String   @default("send") // "send", "edit", "delete"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id        Int      @id @default(autoincrement())
  lid       String
  command   String
  output    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
